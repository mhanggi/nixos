[
  {
    "name": "Area screenshot",
    "command": "gnome-screenshot -a"
  },
  {
    "name": "Mute",
    "command": "pactl set-sink-mute @DEFAULT_SINK@ true",
    "notification": "Audio muted"
  },
  {
    "name": "Mount T7",
    "command": "/home/marc/tasks/t7.sh mount"
  },
  {
    "name": "Unmount T7",
    "command": "/home/marc/tasks/t7.sh unmount"
  },
  {
    "name": "NixOS Garbage Collect",
    "command": "alacritty -e bash -c 'sudo nix-collect-garbage -d'"
  },
  {
    "name": "Unmute",
    "command": "pactl set-sink-mute @DEFAULT_SINK@ false",
    "notification": "Audio unmuted"
  },
  {
    "name": "Shutdown",
    "command": "systemctl poweroff"
  },
  {
    "name": "Reboot",
    "command": "systemctl reboot"
  },
  {
    "name": "Reset GPG Agent",
    "command": "gpg-connect-agent updatestartuptty /bye",
    "notification": "Resetting GPG Agent"
  },
  {
    "name": "Start Borg Backup",
    "command": "alacritty -e bash -c 'sudo systemctl restart borgbackup-job-t560.service'",
    "notification": "Starting Borg Backup"
  },
  {
    "name": "Suspend",
    "command": "systemctl suspend"
  },
  {
    "name": "Screen lock",
    "command": "swaylock"
  },
  {
    "name": "Volume down",
    "command": "pactl -- set-sink-volume 0 -10%",
    "notification": "Volume decreased"
  },
  {
    "name": "Volume up",
    "command": "pactl -- set-sink-volume 0 +10%",
    "notification": "Volume increased"
  },
  {
    "name": "Brightness up",
    "command": "brightnessctl set +10%",
    "notification": "Brightness increased"
  },
  {
    "name": "Brightness down",
    "command": "brightnessctl set 10%-",
    "notification": "Brightness decreased"
  },
  {
    "name": "Connect Bluetooth Speakers (Sony RDP)",
    "command": "bluetoothctl connect C8:84:47:07:CE:2D",
    "notification": "Connecting Speakers"
  },
  {
    "name": "Window screenshot",
    "command": "gnome-screenshot -w"
  }
]
